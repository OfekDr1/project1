char **split(char letter, char *str, int *p_size){
    int i = 1, count = 0;
    if(str[0] == letter) count++;
    
    while(str[i] != '\0'){
        if(str[i] == letter && str[i - 1] == ' ')
            count++;
    }
    
    char** array_of_strings = (char**)malloc(count * sizeof(char*));

    

}